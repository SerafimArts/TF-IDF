{
    "name": "serafim/tf-idf",
    "type": "library",
    "description": "Simple TF-IDF Implementation",
    "homepage": "https://github.com/SerafimArts/TF-IDF",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/SerafimArts/TF-IDF/issues",
        "source": "https://github.com/SerafimArts/TF-IDF"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "voku/stop-words": "^2.0",
        "voku/portable-utf8": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Serafim\\TFIDF\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.20",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^5.4|^6.0",
        "vimeo/psalm": "^5.6"
    },
    "autoload-dev": {
        "psr-4": {
            "Serafim\\TFIDF\\Tests\\": "src"
        }
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpunit",
            "@psalm"
        ],
        "psalm": "psalm --no-cache",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpunit": "phpunit --testdox",
        "phpcbf": "phpcbf -p --standard=PSR12 libs"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
